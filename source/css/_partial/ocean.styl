.jumbotron
  padding 0
  margin-bottom 6rem
  text-align center

.video
  position relative
  height auto

.video-frame
  position absolute
  z-index 1
  right 0
  bottom 0
  left 0
  min-width 100%
  img
    display block
    width 100%

.video-media
  position relative
  z-index 0
  height 80vh
  overflow hidden
  video
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
    min-width 100%
    min-height 100%

.video-overlay
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background-color rgba(178,191,204,.6)

.video-inner
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-65%)
  a, &
    color white
